<div class="page">
    <div class="head-top">
        <%= link_to user_path(current_user) do %>
            <i class="fas fa-bars"></i>
        <% end %>
        <h3>All Groups</h3>
        <i class="fas fa-search"></i>
    </div>
    <div class="head-low">
        <p>Groups In Total</p>
        <p class="price"><%= @groups.count %></p>
    </div>
    <div class="list-items">
        <%= generate_groups(@groups) %>
    </div>
    <div class="create-group">
    <%= link_to 'Create Group', new_group_path, class: 'button'  %>
    </div>
</div>