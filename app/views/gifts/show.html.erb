<div class="page">
    <div class="head-top">
        <%= link_to 'javascript:history.back()' do %>
            <i class="fas fa-arrow-left"></i>
        <% end %>
        <h3>Details</h3>
        <i class="fas fa-search"></i>
    </div>
    <div class="list-items">
        <div class="gift-head d-flex align-items-center">
            <%= insert_icon(@gift.group) %>
            <h3 class="ml-3"><%= @gift.name %></h3>
        </div>
        <div class="mt-5 d-flex justify-content-between">
            <p class="price">Price:</p>
            <p class="h4">$<%= @gift.amount %>
        </div>
        <div class="d-flex justify-content-between">
            <p class="price">Author:</p>
            <p class="h4"><%= @gift.author.name.capitalize %></p>
        </div>
        <div class="d-flex justify-content-between">
            <p class="price">Gift ID:</p>
            <p class="h4"><%= @gift.id %></p>
        </div>
        <div class="d-flex justify-content-between">
            <p class="price">Created at:</p>
            <p class="h4"><%= @gift.created_at.strftime("%Y-%m-%d") %></p>
        </div>
    </div>
</div>
